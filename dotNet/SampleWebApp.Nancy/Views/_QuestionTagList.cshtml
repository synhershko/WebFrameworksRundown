@using System.Linq
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.IEnumerable<System.String>>
              
@if (Model == null || !Model.Any())
{
    <p>No tags</p>
}
else
{
    var tags = new System.Text.StringBuilder();
    foreach (string tag in Model)
    {
        tags.AppendFormat("{0}{1}{2}", tags.Length > 0 ? " " : string.Empty, "t-", tag);
    }

    <div class="tags @tags.ToString()">
        @Html.Partial("_TagList", Model)
    </div>
}